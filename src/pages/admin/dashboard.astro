---
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import { db, tenants, users } from '@/lib/db';
import { eq, sql } from 'drizzle-orm';

// This page is protected by middleware
const { user, memberships } = Astro.locals;

// Verify user is agency admin
const isAgencyAdmin = memberships?.some((m) => m.role === 'agency_admin' && m.tenantId === null);

if (!isAgencyAdmin) {
  // Redirect non-admin users to regular dashboard
  return Astro.redirect('/dashboard');
}

// Fetch admin stats
let totalTenants = 0;
let totalUsers = 0;
let pendingInvites = 0;

try {
  const [tenantCount, userCount, inviteCount] = await Promise.all([
    db.select({ count: sql<number>`count(*)::int` }).from(tenants).where(eq(tenants.status, 'active')),
    db.select({ count: sql<number>`count(*)::int` }).from(users).where(eq(users.status, 'active')),
    db.select({ count: sql<number>`count(*)::int` }).from(users).where(eq(users.status, 'pending')),
  ]);

  totalTenants = tenantCount[0]?.count || 0;
  totalUsers = userCount[0]?.count || 0;
  pendingInvites = inviteCount[0]?.count || 0;
} catch (error) {
  console.error('Error fetching admin stats:', error);
}
---

<DashboardLayout title="Admin Dashboard">
  <div class="space-y-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-semibold" style="color: var(--foreground, #111827);">Admin Dashboard</h1>
        <p class="mt-1" style="color: var(--foreground-muted, #6B7280);">Welcome back, {user?.name || 'Admin'}. Manage all tenants and users from here.</p>
      </div>
    </div>

    <!-- Admin Overview Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="rounded-xl border p-6" style="background-color: var(--card-background, #FFFFFF); border-color: var(--card-border, #E5E7EB);">
        <p class="text-sm font-medium" style="color: var(--foreground-muted, #6B7280);">Total Tenants</p>
        <p class="mt-2 text-3xl font-semibold" style="color: var(--foreground, #111827);">{totalTenants}</p>
        <p class="mt-1 text-sm" style="color: var(--foreground-muted, #6B7280);">Active accounts</p>
      </div>
      <div class="rounded-xl border p-6" style="background-color: var(--card-background, #FFFFFF); border-color: var(--card-border, #E5E7EB);">
        <p class="text-sm font-medium" style="color: var(--foreground-muted, #6B7280);">Total Users</p>
        <p class="mt-2 text-3xl font-semibold" style="color: var(--foreground, #111827);">{totalUsers}</p>
        <p class="mt-1 text-sm" style="color: var(--foreground-muted, #6B7280);">Across all tenants</p>
      </div>
      <div class="rounded-xl border p-6" style="background-color: var(--card-background, #FFFFFF); border-color: var(--card-border, #E5E7EB);">
        <p class="text-sm font-medium" style="color: var(--foreground-muted, #6B7280);">Pending Invites</p>
        <p class="mt-2 text-3xl font-semibold" style="color: var(--foreground, #111827);">{pendingInvites}</p>
        <p class="mt-1 text-sm" style="color: var(--foreground-muted, #6B7280);">Awaiting acceptance</p>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="rounded-xl border p-6" style="background-color: var(--card-background, #FFFFFF); border-color: var(--card-border, #E5E7EB);">
      <h2 class="text-lg font-semibold mb-4" style="color: var(--foreground, #111827);">Quick Actions</h2>
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
        <a
          href="/admin/tenants"
          class="flex items-center gap-3 p-4 rounded-lg border transition-all quick-action-link"
          style="border-color: var(--border, #E5E7EB);"
        >
          <div class="flex-shrink-0 w-10 h-10 rounded-lg flex items-center justify-center" style="background-color: var(--border-muted, #F3F4F6);">
            <svg class="h-5 w-5" style="color: var(--foreground-muted, #6B7280);" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
          </div>
          <div>
            <p class="font-medium" style="color: var(--foreground, #111827);">Manage Tenants</p>
            <p class="text-sm" style="color: var(--foreground-muted, #6B7280);">View and edit tenants</p>
          </div>
        </a>
        <a
          href="/admin/users"
          class="flex items-center gap-3 p-4 rounded-lg border transition-all quick-action-link"
          style="border-color: var(--border, #E5E7EB);"
        >
          <div class="flex-shrink-0 w-10 h-10 rounded-lg flex items-center justify-center" style="background-color: var(--border-muted, #F3F4F6);">
            <svg class="h-5 w-5" style="color: var(--foreground-muted, #6B7280);" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
          </div>
          <div>
            <p class="font-medium" style="color: var(--foreground, #111827);">Manage Users</p>
            <p class="text-sm" style="color: var(--foreground-muted, #6B7280);">View and invite users</p>
          </div>
        </a>
        <a
          href="/admin/settings"
          class="flex items-center gap-3 p-4 rounded-lg border transition-all quick-action-link"
          style="border-color: var(--border, #E5E7EB);"
        >
          <div class="flex-shrink-0 w-10 h-10 rounded-lg flex items-center justify-center" style="background-color: var(--border-muted, #F3F4F6);">
            <svg class="h-5 w-5" style="color: var(--foreground-muted, #6B7280);" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </div>
          <div>
            <p class="font-medium" style="color: var(--foreground, #111827);">Branding</p>
            <p class="text-sm" style="color: var(--foreground-muted, #6B7280);">Portal appearance</p>
          </div>
        </a>
      </div>
    </div>

    <!-- Recent Activity -->
    <div class="rounded-xl border p-6" style="background-color: var(--card-background, #FFFFFF); border-color: var(--card-border, #E5E7EB);">
      <h2 class="text-lg font-semibold mb-4" style="color: var(--foreground, #111827);">Recent Activity</h2>
      <div class="text-center py-8" style="color: var(--foreground-muted, #6B7280);">
        <p>Activity feed will be displayed here</p>
      </div>
    </div>
  </div>
</DashboardLayout>

<style>
  .quick-action-link:hover {
    border-color: var(--foreground-muted, #9CA3AF) !important;
    background-color: var(--border-muted, #F3F4F6);
  }
</style>
