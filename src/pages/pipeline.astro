---
/**
 * Pipeline Dashboard Page
 *
 * Displays pipeline metrics with KPI cards and a visual pipeline stage
 * representation. Shows total pipeline value, stage count, and average
 * deal size computed from pipelineStageCounts dollar values.
 */
import DashboardLayout from '../layouts/DashboardLayout.astro';
import { SyncStatusBanner } from '../components/dashboard/SyncStatusBanner';
import { KPICard } from '../components/dashboard/KPICard';
import { PipelineStages } from '../components/dashboard/PipelineStages';
import { isActiveStage, ACTIVE_PIPELINE_STAGES } from '@/lib/dashboard';
import { db, pipelineStageCounts } from '@/lib/db';
import { eq, and, isNull } from 'drizzle-orm';

// Get tenant context from locals (set by middleware)
const { tenantId } = Astro.locals;

// Query pipeline stage counts for current tenant (live data only)
let stageRows: Array<{
  stage: string;
  count: number | null;
  opportunityCount: number | null;
  dollarValue: string | null;
}> = [];

if (tenantId) {
  try {
    stageRows = await db
      .select({
        stage: pipelineStageCounts.stage,
        count: pipelineStageCounts.count,
        opportunityCount: pipelineStageCounts.opportunityCount,
        dollarValue: pipelineStageCounts.dollarValue,
      })
      .from(pipelineStageCounts)
      .where(
        and(
          eq(pipelineStageCounts.tenantId, tenantId),
          isNull(pipelineStageCounts.reportWeekId)
        )
      );
  } catch (error) {
    console.error('Error fetching pipeline data:', error);
  }
}

// Filter to active stages and sort by pipeline order
const activeStages = stageRows
  .filter((s) => isActiveStage(s.stage))
  .sort((a, b) => {
    const aIdx = ACTIVE_PIPELINE_STAGES.findIndex((s) => s.toLowerCase() === a.stage.toLowerCase());
    const bIdx = ACTIVE_PIPELINE_STAGES.findIndex((s) => s.toLowerCase() === b.stage.toLowerCase());
    return (aIdx === -1 ? 999 : aIdx) - (bIdx === -1 ? 999 : bIdx);
  });

// Prepare data for PipelineStages component
const stageData = activeStages.map((s) => ({
  stage: s.stage,
  count: s.count || 0,
  dollarValue: parseFloat(s.dollarValue || '0'),
}));

// Compute KPIs from stage data
let totalPipelineValue = 0;
let totalDealCount = 0;
let totalOpportunityCount = 0;

for (const s of activeStages) {
  totalPipelineValue += parseFloat(s.dollarValue || '0');
  totalDealCount += s.count || 0;
  totalOpportunityCount += s.opportunityCount || 0;
}

const averageDealSize = totalOpportunityCount > 0 ? totalPipelineValue / totalOpportunityCount : 0;

// Format currency
function formatCurrency(num: number): string {
  if (num >= 1000000) {
    return `$${(num / 1000000).toFixed(2)}M`;
  } else if (num >= 1000) {
    return `$${(num / 1000).toFixed(1)}K`;
  }
  return `$${num.toLocaleString()}`;
}

// Format number
function formatNumber(num: number): string {
  return num.toLocaleString();
}
---

<DashboardLayout title="Pipeline">
  <div class="space-y-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-semibold text-gray-900">Pipeline Dashboard</h1>
        <p class="mt-1 text-gray-600">Track your sales pipeline progress and stage breakdown.</p>
      </div>
    </div>

    <!-- KPI Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <KPICard
        client:load
        label="Total Pipeline Value"
        value={formatCurrency(totalPipelineValue)}
        subtitle="All active stages"
      />
      <KPICard
        client:load
        label="Active Opportunities"
        value={formatNumber(totalOpportunityCount)}
        subtitle="With deal value"
      />
      <KPICard
        client:load
        label="Average Deal Size"
        value={formatCurrency(averageDealSize)}
        subtitle="Per opportunity"
      />
    </div>

    <!-- Pipeline Stage Visualization -->
    {stageData.length > 0 ? (
      <PipelineStages
        client:load
        data={stageData}
      />
    ) : (
      <div class="bg-white rounded-xl border border-gray-200 p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Pipeline Stages</h2>
        <div class="h-64 flex items-center justify-center text-gray-400">
          No pipeline data available
        </div>
      </div>
    )}

    <!-- Data Freshness Banner -->
    <SyncStatusBanner client:load />
  </div>
</DashboardLayout>
