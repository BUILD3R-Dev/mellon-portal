---
import DashboardLayout from '../layouts/DashboardLayout.astro';
---

<DashboardLayout title="Dashboard">
  <div class="space-y-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-semibold text-gray-900">Dashboard</h1>
        <p class="mt-1 text-gray-600">Welcome back. Here's an overview of your performance.</p>
      </div>
      <a
        href="/reports"
        class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-gray-900 rounded-lg hover:bg-gray-800 transition-colors"
      >
        View Latest Report
      </a>
    </div>

    <!-- KPI Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <div class="bg-white rounded-xl border border-gray-200 p-6">
        <p class="text-sm font-medium text-gray-500">Total Leads</p>
        <p class="mt-2 text-3xl font-semibold text-gray-900">--</p>
        <p class="mt-1 text-sm text-gray-500">This week</p>
      </div>
      <div class="bg-white rounded-xl border border-gray-200 p-6">
        <p class="text-sm font-medium text-gray-500">Qualified Leads</p>
        <p class="mt-2 text-3xl font-semibold text-gray-900">--</p>
        <p class="mt-1 text-sm text-gray-500">This week</p>
      </div>
      <div class="bg-white rounded-xl border border-gray-200 p-6">
        <p class="text-sm font-medium text-gray-500">Pipeline Value</p>
        <p class="mt-2 text-3xl font-semibold text-gray-900">--</p>
        <p class="mt-1 text-sm text-gray-500">Weighted</p>
      </div>
      <div class="bg-white rounded-xl border border-gray-200 p-6">
        <p class="text-sm font-medium text-gray-500">Hot Candidates</p>
        <p class="mt-2 text-3xl font-semibold text-gray-900">--</p>
        <p class="mt-1 text-sm text-gray-500">Active</p>
      </div>
    </div>

    <!-- Charts Section -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <div class="bg-white rounded-xl border border-gray-200 p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Lead Trends</h2>
        <div class="h-64 flex items-center justify-center text-gray-400">
          Chart will be rendered here
        </div>
      </div>
      <div class="bg-white rounded-xl border border-gray-200 p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Pipeline by Stage</h2>
        <div class="h-64 flex items-center justify-center text-gray-400">
          Chart will be rendered here
        </div>
      </div>
    </div>

    <!-- Data Freshness Banner -->
    <div class="bg-blue-50 border border-blue-200 rounded-lg px-4 py-3 flex items-center gap-3">
      <div class="w-2 h-2 bg-green-500 rounded-full"></div>
      <p class="text-sm text-blue-800">
        Data last synced: <span class="font-medium">--</span>
      </p>
    </div>
  </div>
</DashboardLayout>
