---
import DashboardLayout from '../layouts/DashboardLayout.astro';
import { DashboardIsland } from '../components/dashboard/DashboardIsland';
import { SyncStatusBanner } from '../components/dashboard/SyncStatusBanner';
---

<DashboardLayout title="Dashboard">
  <div class="space-y-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-semibold text-gray-900">Dashboard</h1>
        <p class="mt-1 text-gray-600">Welcome back. Here's an overview of your performance.</p>
      </div>
      <a
        href="/reports"
        class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-gray-900 rounded-lg hover:bg-gray-800 transition-colors"
      >
        View Latest Report
      </a>
    </div>

    <!-- Dashboard Island: KPI Cards, Time Window Toggle, Charts -->
    <DashboardIsland client:load />

    <!-- Data Freshness Banner -->
    <SyncStatusBanner client:load />
  </div>
</DashboardLayout>
