---
/**
 * Schedule Dashboard Page
 *
 * Displays upcoming scheduled activities in a simple list format.
 * Shows scheduled date/time, activity type, contact name, and description.
 * Filters to future activities only.
 */
import DashboardLayout from '../layouts/DashboardLayout.astro';
import { SyncStatusBanner } from '../components/dashboard/SyncStatusBanner';
import { db, ctScheduledActivities } from '@/lib/db';
import { eq, gt, asc, and } from 'drizzle-orm';

// Get tenant context from locals (set by middleware)
const { tenantId } = Astro.locals;

// Query upcoming scheduled activities for current tenant
let activities: Array<{
  id: string;
  activityType: string | null;
  scheduledAt: Date;
  contactName: string | null;
  description: string | null;
  status: string | null;
}> = [];

if (tenantId) {
  try {
    const now = new Date();
    activities = await db
      .select({
        id: ctScheduledActivities.id,
        activityType: ctScheduledActivities.activityType,
        scheduledAt: ctScheduledActivities.scheduledAt,
        contactName: ctScheduledActivities.contactName,
        description: ctScheduledActivities.description,
        status: ctScheduledActivities.status,
      })
      .from(ctScheduledActivities)
      .where(
        and(
          eq(ctScheduledActivities.tenantId, tenantId),
          gt(ctScheduledActivities.scheduledAt, now)
        )
      )
      .orderBy(asc(ctScheduledActivities.scheduledAt))
      .limit(100);
  } catch (error) {
    console.error('Error fetching scheduled activities:', error);
  }
}

// Format date/time
function formatDateTime(date: Date): string {
  return new Intl.DateTimeFormat('en-US', {
    weekday: 'short',
    year: 'numeric',
    month: 'short',
    day: 'numeric',
    hour: '2-digit',
    minute: '2-digit',
  }).format(date);
}

// Format relative time
function formatRelativeTime(date: Date): string {
  const now = new Date();
  const diffMs = date.getTime() - now.getTime();
  const diffDays = Math.floor(diffMs / (1000 * 60 * 60 * 24));
  const diffHours = Math.floor(diffMs / (1000 * 60 * 60));

  if (diffDays === 0) {
    if (diffHours <= 1) {
      return 'In less than an hour';
    }
    return `In ${diffHours} hours`;
  } else if (diffDays === 1) {
    return 'Tomorrow';
  } else if (diffDays < 7) {
    return `In ${diffDays} days`;
  } else if (diffDays < 14) {
    return 'Next week';
  } else {
    return `In ${Math.floor(diffDays / 7)} weeks`;
  }
}

// Get activity type badge color
function getActivityTypeBadgeClass(type: string | null): string {
  if (!type) return 'bg-gray-100 text-gray-800';

  const typeLower = type.toLowerCase();
  if (typeLower.includes('call') || typeLower.includes('phone')) {
    return 'bg-blue-100 text-blue-800';
  } else if (typeLower.includes('meeting') || typeLower.includes('visit')) {
    return 'bg-purple-100 text-purple-800';
  } else if (typeLower.includes('email') || typeLower.includes('mail')) {
    return 'bg-green-100 text-green-800';
  } else if (typeLower.includes('follow') || typeLower.includes('task')) {
    return 'bg-amber-100 text-amber-800';
  } else if (typeLower.includes('demo') || typeLower.includes('present')) {
    return 'bg-red-100 text-red-800';
  }
  return 'bg-gray-100 text-gray-800';
}

// Truncate description
function truncateDescription(desc: string | null, maxLength: number = 100): string {
  if (!desc) return 'No description';
  if (desc.length <= maxLength) return desc;
  return desc.substring(0, maxLength) + '...';
}
---

<DashboardLayout title="Schedule">
  <div class="space-y-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-semibold" style="color: var(--foreground, #111827);">Schedule</h1>
        <p class="mt-1" style="color: var(--foreground-muted, #6B7280);">Upcoming scheduled activities and appointments.</p>
      </div>
    </div>

    <!-- Schedule List -->
    <div class="space-y-4">
      {activities.length > 0 ? (
        activities.map((activity) => (
          <div class="rounded-xl border p-6" style="background-color: var(--card-background, #FFFFFF); border-color: var(--card-border, #E5E7EB);">
            <div class="flex items-start justify-between gap-4">
              <div class="flex-1 min-w-0">
                <div class="flex items-center gap-3 mb-2">
                  <span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${getActivityTypeBadgeClass(activity.activityType)}`}>
                    {activity.activityType || 'Activity'}
                  </span>
                  <span class="text-sm" style="color: var(--foreground-muted, #6B7280);">
                    {formatRelativeTime(activity.scheduledAt)}
                  </span>
                </div>

                <div class="mb-2">
                  <span class="text-sm font-medium" style="color: var(--foreground, #111827);">
                    {activity.contactName || 'No contact specified'}
                  </span>
                </div>

                <p class="text-sm" style="color: var(--foreground-muted, #6B7280);">
                  {truncateDescription(activity.description)}
                </p>
              </div>

              <div class="text-right flex-shrink-0">
                <div class="text-sm font-medium" style="color: var(--foreground, #111827);">
                  {formatDateTime(activity.scheduledAt)}
                </div>
                {activity.status && (
                  <span class="text-xs" style="color: var(--foreground-muted, #6B7280);">
                    {activity.status}
                  </span>
                )}
              </div>
            </div>
          </div>
        ))
      ) : (
        <div class="rounded-xl border p-8 text-center" style="background-color: var(--card-background, #FFFFFF); border-color: var(--card-border, #E5E7EB); color: var(--foreground-muted, #6B7280);">
          No upcoming scheduled activities
        </div>
      )}
    </div>

    <!-- Data Freshness Banner -->
    <SyncStatusBanner client:load />
  </div>
</DashboardLayout>
