---
/**
 * Leads Dashboard Page
 *
 * Displays lead metrics with KPI cards and ECharts visualizations.
 * Shows leads by source (horizontal bar chart) and leads by status (pie chart).
 * Only includes active pipeline stages, consistent with the Pipeline page.
 */
import DashboardLayout from '../layouts/DashboardLayout.astro';
import { SyncStatusBanner } from '../components/dashboard/SyncStatusBanner';
import { KPICard } from '../components/dashboard/KPICard';
import { HorizontalBarChart } from '../components/dashboard/HorizontalBarChart';
import { PieChart } from '../components/dashboard/PieChart';
import { isActiveStage } from '@/lib/dashboard';
import { db, leadMetrics } from '@/lib/db';
import { eq, and, isNull } from 'drizzle-orm';

// Get tenant context from locals (set by middleware)
const { tenantId } = Astro.locals;

// Query live lead metrics for current tenant (reportWeekId IS NULL = current data)
let metrics: Array<{
  dimensionType: string;
  dimensionValue: string;
  leads: number | null;
}> = [];

if (tenantId) {
  try {
    metrics = await db
      .select({
        dimensionType: leadMetrics.dimensionType,
        dimensionValue: leadMetrics.dimensionValue,
        leads: leadMetrics.leads,
      })
      .from(leadMetrics)
      .where(
        and(
          eq(leadMetrics.tenantId, tenantId),
          isNull(leadMetrics.reportWeekId)
        )
      );
  } catch (error) {
    console.error('Error fetching lead metrics:', error);
  }
}

// Prepare chart data from source and status dimensions only
const bySource: Array<{ stage: string; count: number }> = [];
const byStatus: Array<{ name: string; value: number }> = [];
let totalProspects = 0;
let activeProspects = 0;

for (const metric of metrics) {
  const leads = metric.leads || 0;

  if (metric.dimensionType === 'source') {
    bySource.push({
      stage: metric.dimensionValue,
      count: leads,
    });
  } else if (metric.dimensionType === 'status') {
    totalProspects += leads;
    if (isActiveStage(metric.dimensionValue)) {
      activeProspects += leads;
      byStatus.push({
        name: metric.dimensionValue,
        value: leads,
      });
    }
  }
}

// Sort sources by count descending
bySource.sort((a, b) => b.count - a.count);

// Sort status by value descending for cleaner pie chart
byStatus.sort((a, b) => b.value - a.value);

const leadSourcesCount = bySource.length;

// Format numbers with commas
function formatNumber(num: number): string {
  return num.toLocaleString();
}
---

<DashboardLayout title="Leads">
  <div class="space-y-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-semibold text-gray-900">Leads Dashboard</h1>
        <p class="mt-1 text-gray-600">Track your lead generation and qualification metrics.</p>
      </div>
    </div>

    <!-- KPI Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <KPICard
        client:load
        label="Total Prospects"
        value={formatNumber(totalProspects)}
        subtitle="All statuses"
      />
      <KPICard
        client:load
        label="Active in Pipeline"
        value={formatNumber(activeProspects)}
        subtitle="Active stages only"
      />
      <KPICard
        client:load
        label="Lead Sources"
        value={formatNumber(leadSourcesCount)}
        subtitle="Active sources"
      />
    </div>

    <!-- Charts Section -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      {bySource.length > 0 ? (
        <HorizontalBarChart
          client:load
          data={bySource}
          title="Leads by Source"
          height={Math.max(300, bySource.length * 40)}
        />
      ) : (
        <div class="bg-white rounded-xl border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Leads by Source</h2>
          <div class="h-64 flex items-center justify-center text-gray-400">
            No source data available
          </div>
        </div>
      )}

      {byStatus.length > 0 ? (
        <PieChart
          client:load
          data={byStatus}
          title="Leads by Status"
          height={Math.max(300, byStatus.length * 25)}
        />
      ) : (
        <div class="bg-white rounded-xl border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Leads by Status</h2>
          <div class="h-64 flex items-center justify-center text-gray-400">
            No status data available
          </div>
        </div>
      )}
    </div>

    <!-- Data Freshness Banner -->
    <SyncStatusBanner client:load />
  </div>
</DashboardLayout>
