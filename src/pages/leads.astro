---
/**
 * Leads Dashboard Page
 *
 * Displays lead metrics with KPI cards and ECharts visualizations.
 * Shows leads by source (bar chart) and leads by status (pie chart).
 */
import DashboardLayout from '../layouts/DashboardLayout.astro';
import { SyncStatusBanner } from '../components/dashboard/SyncStatusBanner';
import { KPICard } from '../components/dashboard/KPICard';
import { LeadsChart } from '../components/dashboard/LeadsChart';
import { PieChart } from '../components/dashboard/PieChart';
import { db, leadMetrics } from '@/lib/db';
import { eq } from 'drizzle-orm';

// Get tenant context from locals (set by middleware)
const { tenantId } = Astro.locals;

// Query lead metrics for current tenant
let metrics: Array<{
  dimensionType: string;
  dimensionValue: string;
  leads: number | null;
  qualifiedLeads: number | null;
  clicks: number | null;
  impressions: number | null;
  cost: string | null;
}> = [];

if (tenantId) {
  try {
    metrics = await db
      .select({
        dimensionType: leadMetrics.dimensionType,
        dimensionValue: leadMetrics.dimensionValue,
        leads: leadMetrics.leads,
        qualifiedLeads: leadMetrics.qualifiedLeads,
        clicks: leadMetrics.clicks,
        impressions: leadMetrics.impressions,
        cost: leadMetrics.cost,
      })
      .from(leadMetrics)
      .where(eq(leadMetrics.tenantId, tenantId));
  } catch (error) {
    console.error('Error fetching lead metrics:', error);
  }
}

// Aggregate totals
let totalLeads = 0;
let totalQualifiedLeads = 0;
const sourceSet = new Set<string>();

// Prepare chart data
const bySource: Array<{ source: string; leads: number }> = [];
const byStatus: Array<{ name: string; value: number }> = [];

for (const metric of metrics) {
  const leads = metric.leads || 0;
  const qualifiedLeads = metric.qualifiedLeads || 0;

  totalLeads += leads;
  totalQualifiedLeads += qualifiedLeads;

  if (metric.dimensionType === 'source') {
    sourceSet.add(metric.dimensionValue);
    bySource.push({
      source: metric.dimensionValue,
      leads: leads,
    });
  } else if (metric.dimensionType === 'status') {
    byStatus.push({
      name: metric.dimensionValue,
      value: leads,
    });
  }
}

const leadSourcesCount = sourceSet.size;

// Format numbers with commas
function formatNumber(num: number): string {
  return num.toLocaleString();
}
---

<DashboardLayout title="Leads">
  <div class="space-y-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-semibold text-gray-900">Leads Dashboard</h1>
        <p class="mt-1 text-gray-600">Track your lead generation and qualification metrics.</p>
      </div>
    </div>

    <!-- KPI Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <KPICard
        client:load
        label="Total Leads"
        value={formatNumber(totalLeads)}
        subtitle="All time"
      />
      <KPICard
        client:load
        label="Qualified Leads"
        value={formatNumber(totalQualifiedLeads)}
        subtitle="All time"
      />
      <KPICard
        client:load
        label="Lead Sources"
        value={formatNumber(leadSourcesCount)}
        subtitle="Active sources"
      />
    </div>

    <!-- Charts Section -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      {bySource.length > 0 ? (
        <LeadsChart
          client:load
          data={bySource}
          title="Leads by Source"
          height={300}
        />
      ) : (
        <div class="bg-white rounded-xl border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Leads by Source</h2>
          <div class="h-64 flex items-center justify-center text-gray-400">
            No source data available
          </div>
        </div>
      )}

      {byStatus.length > 0 ? (
        <PieChart
          client:load
          data={byStatus}
          title="Leads by Status"
          height={300}
        />
      ) : (
        <div class="bg-white rounded-xl border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Leads by Status</h2>
          <div class="h-64 flex items-center justify-center text-gray-400">
            No status data available
          </div>
        </div>
      )}
    </div>

    <!-- Data Freshness Banner -->
    <SyncStatusBanner client:load />
  </div>
</DashboardLayout>
