---
/**
 * Hot List Page
 *
 * Displays prioritized pipeline candidates in later-funnel stages.
 * Shows candidate name, brand/market, stage, IFF, weighted IFF,
 * sales lead, and likelihood to close. Matches the spreadsheet format.
 */
import DashboardLayout from '../layouts/DashboardLayout.astro';
import { SyncStatusBanner } from '../components/dashboard/SyncStatusBanner';
import { HOT_LIST_STAGES } from '@/lib/dashboard';
import { db, hotListItems } from '@/lib/db';
import { eq, and, isNull, desc } from 'drizzle-orm';

// Get tenant context from locals (set by middleware)
const { tenantId } = Astro.locals;

// Query hot list items for current tenant (live data only)
let items: Array<{
  id: string;
  candidateName: string;
  market: string | null;
  units: number | null;
  iff: string | null;
  weightedIff: string | null;
  salesLead: string | null;
  stage: string | null;
  likelyPct: number | null;
}> = [];

if (tenantId) {
  try {
    items = await db
      .select({
        id: hotListItems.id,
        candidateName: hotListItems.candidateName,
        market: hotListItems.market,
        units: hotListItems.units,
        iff: hotListItems.iff,
        weightedIff: hotListItems.weightedIff,
        salesLead: hotListItems.salesLead,
        stage: hotListItems.stage,
        likelyPct: hotListItems.likelyPct,
      })
      .from(hotListItems)
      .where(
        and(
          eq(hotListItems.tenantId, tenantId),
          isNull(hotListItems.reportWeekId)
        )
      )
      .orderBy(desc(hotListItems.weightedIff));
  } catch (error) {
    console.error('Error fetching hot list items:', error);
  }
}

// Sort by stage priority (later stages first), then by IFF descending
const stageOrder = new Map(HOT_LIST_STAGES.map((s, i) => [s.toLowerCase(), i]));
items.sort((a, b) => {
  const aStage = stageOrder.get((a.stage || '').toLowerCase()) ?? 999;
  const bStage = stageOrder.get((b.stage || '').toLowerCase()) ?? 999;
  // Later stages (higher index) first
  if (bStage !== aStage) return bStage - aStage;
  // Then by IFF descending
  return parseFloat(b.iff || '0') - parseFloat(a.iff || '0');
});

// Compute totals
let totalIff = 0;
let totalWeightedIff = 0;
for (const item of items) {
  totalIff += parseFloat(item.iff || '0');
  totalWeightedIff += parseFloat(item.weightedIff || '0');
}

// Format currency
function formatCurrency(value: string | number | null): string {
  if (value === null || value === undefined) return '$0';
  const num = typeof value === 'number' ? value : parseFloat(value);
  if (isNaN(num)) return '$0';
  return `$${num.toLocaleString(undefined, { minimumFractionDigits: 0, maximumFractionDigits: 0 })}`;
}

// Stage badge styling based on pipeline position
function getStageBadgeClass(stage: string | null): string {
  if (!stage) return 'bg-gray-100 text-gray-800';
  const s = stage.toLowerCase();
  if (s.includes('fa signed')) return 'bg-emerald-100 text-emerald-800';
  if (s.includes('fa sent') || s.includes('fa requested')) return 'bg-green-100 text-green-800';
  if (s.includes('discovery day completed')) return 'bg-blue-100 text-blue-800';
  if (s.includes('discovery day booked')) return 'bg-indigo-100 text-indigo-800';
  if (s.includes('deal structure')) return 'bg-purple-100 text-purple-800';
  return 'bg-gray-100 text-gray-800';
}
---

<DashboardLayout title="Hot List">
  <div class="space-y-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-semibold text-gray-900">Pipeline Hot List</h1>
        <p class="mt-1 text-gray-600">Candidates in later-funnel stages with deal momentum.</p>
      </div>
    </div>

    <!-- Hot List Table -->
    <div class="bg-white rounded-xl border border-gray-200 overflow-hidden">
      {items.length > 0 ? (
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Candidate Name
                </th>
                <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Brand / Market
                </th>
                <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Stage
                </th>
                <th scope="col" class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  IFF
                </th>
                <th scope="col" class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Weighted IFF
                </th>
                <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Sales Lead
                </th>
                <th scope="col" class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  % Likely
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              {items.map((item) => (
                <tr class="hover:bg-gray-50">
                  <td class="px-4 py-3 whitespace-nowrap text-sm font-medium text-gray-900">
                    {item.candidateName}
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-500">
                    {item.market || '-'}
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap">
                    <span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${getStageBadgeClass(item.stage)}`}>
                      {item.stage || 'Unknown'}
                    </span>
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-900 text-right">
                    {formatCurrency(item.iff)}
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-900 text-right font-medium">
                    {formatCurrency(item.weightedIff)}
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-500">
                    {item.salesLead || '-'}
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-900 text-right">
                    {item.likelyPct ?? 0}%
                  </td>
                </tr>
              ))}
            </tbody>
            <tfoot class="bg-gray-50 border-t-2 border-gray-300">
              <tr>
                <td class="px-4 py-3 text-sm font-bold text-gray-900">
                  Total ({items.length})
                </td>
                <td class="px-4 py-3"></td>
                <td class="px-4 py-3"></td>
                <td class="px-4 py-3 text-sm font-bold text-gray-900 text-right">
                  {formatCurrency(totalIff)}
                </td>
                <td class="px-4 py-3 text-sm font-bold text-gray-900 text-right">
                  {formatCurrency(totalWeightedIff)}
                </td>
                <td class="px-4 py-3"></td>
                <td class="px-4 py-3"></td>
              </tr>
            </tfoot>
          </table>
        </div>
      ) : (
        <div class="p-8 text-center text-gray-500">
          No hot list items available. Candidates appear here when they reach the Deal Structure stage or beyond.
        </div>
      )}
    </div>

    <!-- Data Freshness Banner -->
    <SyncStatusBanner client:load />
  </div>
</DashboardLayout>
